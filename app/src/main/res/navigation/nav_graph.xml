<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/EmployeeFragment">

    <fragment
        android:id="@+id/EmployeeFragment"
        android:name="com.example.tipsaredone.views.EmployeesFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_employees">

        <action
            android:id="@+id/action_empList_to_empEdit"
            app:destination="@id/EditEmployeeFragment" />
    </fragment>
    <fragment
        android:id="@+id/EditEmployeeFragment"
        android:name="com.example.tipsaredone.views.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/EmployeeFragment" />
    </fragment>
</navigation>