<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TipsAreDone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/starbucks_green</item>
        <item name="colorPrimaryVariant">@color/accent_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/house_green</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/house_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@font/sodo</item>
        <item name="android:buttonStyle">@font/sodo</item>
        <item name="android:editTextStyle">@font/sodo</item>
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/sodo</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title." parent="@android:style/TextAppearance">
        <item name="android:fontFamily">lander</item>
    </style>

    <style name="Theme.TipsAreDone.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TipsAreDone.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TipsAreDone.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>