<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/starbucks_green">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/subcnst_calculating_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_calculating_screen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="32dp"
            android:fontFamily="@font/lander"
            android:text="calculating"
            android:textColor="@color/white"
            android:textSize="64sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_calculating_screen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="32dp"
            android:fontFamily="@font/lander"
            android:text="tips"
            android:textColor="@color/white"
            android:textSize="64sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintStart_toStartOf="@+id/tv_title_screen1"
            app:layout_constraintTop_toBottomOf="@+id/tv_calculating_screen1" />

        <TextView
            android:id="@+id/tv_calculating_screen3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:elevation="32dp"
            android:fontFamily="@font/lander"
            android:text=". . ."
            android:textColor="@color/white"
            android:textSize="64sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintStart_toEndOf="@+id/tv_calculating_screen2"
            app:layout_constraintTop_toTopOf="@+id/tv_calculating_screen2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>