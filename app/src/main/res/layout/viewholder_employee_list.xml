<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cnst_employee_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@color/white"
    android:elevation="2dp"
    android:padding="16dp"
    tools:layout_editor_absoluteX="4dp"
    tools:layout_editor_absoluteY="8dp">

    <TextView
        android:id="@+id/tv_employee_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/sodo"
        android:gravity="center_vertical"
        android:hint="Ashley Ramirez Johnson"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/subcnst_employee_list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.575" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/subcnst_employee_list"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/frame_tips_collected"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/warm_neutral"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_collected_tips"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/icon_checkmark"
                android:fontFamily="@font/sodo"
                android:gravity="center"
                android:textSize="16sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_tips_uncollected"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/starbucks_green"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_uncollected_tips"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/sodo"
                android:gravity="center"
                android:text="$ 47.00"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>