<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cnst_dialog_delete_employee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/subcnst_dialog_delete_employee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/rounded_square"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:elevation="16dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_dialog_delete_employee_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sodo"
            android:hint="Delete Tahir Atkinson ?"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_dialog_delete_employee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/sodo"
            android:lineSpacingExtra="8sp"
            android:text="This will permanently delete all of this employee's tip records."
            android:textAlignment="textStart"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_dialog_delete_employee_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialog_delete_employee_header"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_dialog_delete_employee_cancel"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sodo"
            android:text="Cancel"
            android:textSize="12sp"
            app:iconGravity="textEnd"
            app:iconSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:iconGravity="textEnd" />

        <Button
            android:id="@+id/btn_dialog_delete_employee_confirm"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sodo"
            android:text="Confirm"
            android:textSize="12sp"
            app:icon="@drawable/icon_checkmark"
            app:iconGravity="textEnd"
            app:iconSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:iconGravity="textEnd" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>