<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cnst_do_tips"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.DatePickerFragment">

    <TextView
        android:id="@+id/tv_employees_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/icon_groups"
        android:backgroundTint="@color/default_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_do_tips_reminder1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/sodo"
        android:lineSpacingExtra="8sp"
        android:text="Confirm that all your employees are listed at the Employees tab."
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_employees_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_employees_icon"
        app:layout_constraintTop_toTopOf="@+id/tv_employees_icon" />

    <TextView
        android:id="@+id/tv_do_tips_reminder3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/sodo"
        android:lineSpacingExtra="8sp"
        android:text="This app only takes $USD as input."
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_notification_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_notification_icon"
        app:layout_constraintTop_toTopOf="@+id/tv_notification_icon" />

    <TextView
        android:id="@+id/tv_notification_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/icon_help"
        android:backgroundTint="@color/default_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_employees_icon" />

    <TextView
        android:id="@+id/tv_calendar_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/icon_calendar"
        android:backgroundTint="@color/default_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_notification_icon" />

    <TextView
        android:id="@+id/tv_do_tips_reminder2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/sodo"
        android:lineSpacingExtra="8sp"
        android:text="Enter a start and end date for this week's tip collection."
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_calendar_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_calendar_icon"
        app:layout_constraintTop_toTopOf="@+id/tv_calendar_icon" />

    <TextView
        android:id="@+id/tv_start_date_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/sodo"
        android:lineSpacingExtra="8sp"
        android:text="Start Date"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/input_start_date"
        app:layout_constraintStart_toStartOf="@+id/tv_calendar_icon"
        app:layout_constraintTop_toTopOf="@+id/input_start_date" />

    <TextView
        android:id="@+id/tv_end_date_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sodo"
        android:lineSpacingExtra="8sp"
        android:text="End Date"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/input_end_date"
        app:layout_constraintEnd_toEndOf="@+id/tv_start_date_header"
        app:layout_constraintTop_toTopOf="@+id/input_end_date" />

    <TextView
        android:id="@+id/input_start_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:background="@android:drawable/editbox_background"
        android:fontFamily="@font/sodo"
        android:gravity="center"
        android:padding="8dp"
        android:text="January 1, 2022"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_do_tips_reminder2"
        app:layout_constraintStart_toEndOf="@+id/tv_start_date_header"
        app:layout_constraintTop_toBottomOf="@+id/tv_do_tips_reminder2" />

    <TextView
        android:id="@+id/input_end_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@android:drawable/editbox_background"
        android:fontFamily="@font/sodo"
        android:gravity="center"
        android:padding="8dp"
        android:text="January 1, 2022"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/input_start_date"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_end_date_header"
        app:layout_constraintTop_toBottomOf="@+id/input_start_date" />

    <Button
        android:id="@+id/btn_date_picker_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:elevation="32dp"
        android:fontFamily="@font/sodo"
        android:padding="16dp"
        android:text="Start Tips"
        android:textSize="12sp"
        app:iconGravity="textEnd"
        app:iconSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_end_date"
        tools:iconGravity="textEnd" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/subcnst_date_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sodo"
            android:text="Select a date."
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_picker" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>